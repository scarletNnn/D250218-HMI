<UserControl
    x:Class="D250218.CustomControls.AlertPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:D250218.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:D250218.CustomControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="600"
    Height="70"
    Background="White"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:NegatingConverter x:Key="NegatingConverter" />
    </UserControl.Resources>


    <StackPanel
        x:Name="stack"
        Height="70"
        VerticalAlignment="Center">
        <StackPanel.RenderTransform>
            <TranslateTransform Y="0" />
        </StackPanel.RenderTransform>
        <TextBlock
            x:Name="text"
            Margin="0,13,0,0"
            FontSize="32"
            Foreground="Red"
            Text="{Binding Message, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}">

            <TextBlock.Triggers>
                <EventTrigger RoutedEvent="Binding.TargetUpdated">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                RepeatBehavior="Forever"
                                Storyboard.TargetName="stack"
                                Storyboard.TargetProperty="RenderTransform.X"
                                From="600"
                                To="{Binding Width, ElementName=text, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource NegatingConverter}}"
                                Duration="0:0:10" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </TextBlock.Triggers>
        </TextBlock>
    </StackPanel>


</UserControl>
