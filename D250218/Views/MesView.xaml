<Page
    x:Class="D250218.Views.MesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:local="clr-namespace:D250218.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:vm="clr-namespace:D250218.ViewModels"
    Title="MesView"
    Width="1700"
    Height="1000"
    d:DataContext="{d:DesignInstance vm:MesViewModel}"
    lex:LocalizeDictionary.DesignCulture="en"
    lex:ResxLocalizationProvider.DefaultAssembly="D250218"
    lex:ResxLocalizationProvider.DefaultDictionary="Lang"
    Background="Honeydew"
    mc:Ignorable="d">

    <WrapPanel>
        <GroupBox Margin="20" BorderBrush="BlueViolet">
            <GroupBox.Header>
                <TextBlock FontSize="18" Text="串口配置" />
            </GroupBox.Header>
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        FontSize="24"
                        Text="串口选择： " />
                    <ComboBox
                        Width="200"
                        Margin="5"
                        ItemsSource="{Binding PortNames}"
                        Text="{Binding SelectPortName}" />
                    <ui:Button
                        Width="100"
                        Margin="5"
                        BorderBrush="LightGreen"
                        Command="{Binding ConnectCommand}"
                        Content="{lex:Loc ConnectText}" />
                    <ui:Button
                        Width="100"
                        Margin="5"
                        BorderBrush="LightCoral"
                        Command="{Binding DisconnectCommand}"
                        Content="{lex:Loc DisconnectText}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        FontSize="24"
                        Text="条码：" />
                    <TextBox
                        Width="300"
                        Margin="5"
                        d:Text="123456789009876543211234567890"
                        Text="{Binding Sn, Source={x:Static vm:MesViewModel.Instance}}" />
                    <ui:Button
                        Margin="5"
                        BorderBrush="LightBlue"
                        Command="{Binding ScanTestCommand}"
                        Content="{lex:Loc SnTestButton}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>

    </WrapPanel>
</Page>
